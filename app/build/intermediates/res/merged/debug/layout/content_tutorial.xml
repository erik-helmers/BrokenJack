<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="157dp"
        android:drawablePadding="40dp"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Holo.SearchResult.Subtitle"
        android:text='Je suis ravi de vous prÃ©senter cette application... \nPour commencer appuyez sur le boutton puis appuyez sur "Accepter".' />

    <TextView
        android:id="@+id/hello_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="36sp"
        android:text="Bienvenue !"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_below="@+id/hello_text_view"
        android:layout_marginTop="25dp"
        android:drawablePadding="40dp"
        android:fontFamily="serif"

        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Holo.SearchResult.Subtitle"
        android:textSize="18sp"
        android:typeface="monospace"
        android:text="BrokenJack est un lecteur musique efficace, magnifique et intuitif. Il vous accompagnera dans tous vos moments de solitude et de tristesse, et crachera toujours au mauvais moment." />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:clickable="true"
        app:backgroundTint="#000"
        app:fabSize="normal"
        app:rippleColor="#600"
        app:srcCompat="@drawable/ic_menu_send"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
